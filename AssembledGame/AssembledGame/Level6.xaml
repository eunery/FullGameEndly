<Window x:Name="LevelSix"
    x:Class="AssembledGame.Level6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssembledGame"
        mc:Ignorable="d"
        Title="Level6" Height="450" Width="800">
    <Grid x:Name="gMain">
        <Button x:Name="buttonInvisible"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="55"
                Height="20"
                Visibility="Visible">
            <Button.ContextMenu>
                <ContextMenu Name="cmMenu">
                    <MenuItem x:Name="WrongChoose" Header="Дальше"></MenuItem>
                    <MenuItem x:Name="RightChoose" Header="Нет, хочу убежать"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
    </Grid>
</Window>
